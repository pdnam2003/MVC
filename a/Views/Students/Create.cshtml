@model CodeFirst.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<h2>Thêm sinh viên</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <!-- Thêm phần chọn Course -->
    <div class="form-group">
        <label>Chọn khóa học</label>
        <select asp-for="Courses" asp-items="ViewBag.CourseList" multiple class="form-control" name="selectedCourses">
        </select>
    </div>


    <button type="submit" class="btn btn-primary mt-3">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
